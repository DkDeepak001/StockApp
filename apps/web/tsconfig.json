{
  "extends": "@stockHub/typescript/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [".", ".next/types/**/*.ts", "postcss.config.cjs"],
  "exclude": ["node_modules"]
}
