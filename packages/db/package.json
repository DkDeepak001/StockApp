{
  "name": "@stockHub/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "dev":"yarn run studio",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "generate": "yarn with-env drizzle-kit  generate:pg",
    "migrate": "yarn generate && cd ./src/ && node ./migrate.js",
    "push": "yarn with-env drizzle-kit push:pg",
    "studio": "yarn with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.8.1",
    "@planetscale/database": "^1.16.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.29.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@stockHub/eslint": "*",
    "@stockHub/typescript": "*",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@stockHub/eslint/base"
    ]
  }
}
